@using WebPortal.Models.Sensors
@model IEnumerable<ISensor>

@{
    ViewBag.Title = "Sensors";
    int i = 1;
}

<h2> @ViewBag.Title</h2>

<div class="panel">
    @Html.ActionLink("Create", "SensorsCreate", "Sensors", null, new { @class = "btn btn-success" })
</div>

<table class="table table-responsible table-hover table-bordered">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SensorType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RaspberryPin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @i.ToString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SensorType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RaspberryPin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                @Html.ActionLink("Edit", "SensorsEdit", "Sensors", new { @item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Details", "SensorsDetails", "Sensors", new { @item.Id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "SensorsDelete", "Sensors", new { @item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
            i++;
        }
    </tbody>
</table>
