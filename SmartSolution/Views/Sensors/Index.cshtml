@using WebPortal.Models.Sensors
@model IEnumerable<ISensor>

@{
    ViewBag.Title = "Sensors";
    int i = 1;
}
<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="row">
        @foreach (var modelItem in Model)
        {
            if (modelItem.IsActive == true)
            {
                <div class="col-sm-4">
                    <a href="#" class="tile green">
                        <h3 class="title">@modelItem.Name</h3>
                        <h3 class="title">@modelItem.Value</h3>
                        <h5 class="title">@modelItem.SensorType</h5>
                        <p>@modelItem.Id</p>
                    </a>
                </div>
            }
            else
            {
                <div class="col-sm-4">
                    <a href="#" class="tile orange">
                        <h3 class="title">@modelItem.Name</h3>
                        <h3 class="title">@modelItem.Value</h3>
                        <h5 class="title">@modelItem.SensorType</h5>
                        <p>@modelItem.Id</p>
                    </a>
                </div>
            }
        }
    </div>
</div>