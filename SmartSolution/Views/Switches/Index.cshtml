@using WebPortal.Models.Switches
@model IEnumerable<ISwitch>

@{
    ViewBag.Title = "Switches";
    int i = 1;
}
<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="row">
        @foreach (var modelItem in Model)
        {
            if (modelItem.State == true)
            {

                <div class="col-sm-4">
                    <a href="Switches/Details/@modelItem.Id" class="tile green">
                        <h3 class="title">@modelItem.Name</h3>
                        <h5 class="title">@modelItem.SwitchType</h5>
                        <p>@modelItem.Id</p>
                    </a>
                </div>
            }
            else
            {
                <div class="col-sm-4">
                    <a href="Switches/Details/@modelItem.Id" class="tile orange">
                        <h3 class="title">@modelItem.Name</h3>
                        <h5 class="title">@modelItem.SwitchType</h5>
                        <p>@modelItem.Id</p>
                    </a>
                </div>
            }
        }
    </div>
</div>