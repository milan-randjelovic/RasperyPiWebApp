@using WebPortal.Models.Switches
@model IEnumerable<ISwitch>

@{
    ViewBag.Title = "Switches Configuration";
    int i = 1;
}

<h2>@ViewBag.Title</h2>

<div class="panel">
    @Html.ActionLink("Create", "SwitchesCreate", "Switches", null, new { @class = "btn btn-success" })
</div>

<table class="table table-responsible table-hover table-bordered">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SwitchType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RaspberryPin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InverseLogic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>

            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @i.ToString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SwitchType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RaspberryPin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InverseLogic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>

            <td>
                @Html.ActionLink("Edit", "SwitchesEdit", new { item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Details", "SwitchesDetails", new { item.Id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "SwitchesDelete", new { item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
            i++;
        }
    </tbody>
</table>
